try:
    n = int(input("Введіть розмір матриці n: "))
    
    if n <= 0:
        print("Розмір повинен бути натуральним числом.")
    else:
        matrix = [[0] * n for _ in range(n)]
        
        top, bottom = 0, n - 1
        left, right = 0, n - 1
        number = 1
        
        while number <= n * n:
            
            for i in range(left, right + 1):
                matrix[top][i] = number
                number += 1
            top += 1
            if top > bottom: break
            
            for i in range(top, bottom + 1):
                matrix[i][right] = number
                number += 1
            right -= 1
            if left > right: break
            
            for i in range(right, left - 1, -1):
                matrix[bottom][i] = number
                number += 1
            bottom -= 1
            if top > bottom: break
            
            for i in range(bottom, top - 1, -1):
                matrix[i][left] = number
                number += 1
            left += 1
            
        print(f"\nСпіральна матриця {n} x {n}:")
        
        max_val = n * n
        width = len(str(max_val)) + 1
        
        for row in matrix:
            print("".join(f"{num:{width}d}" for num in row))

except ValueError:
    print("Невірний ввід. Будь ласка, введіть ціле число.")
